<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:id="@+id/ayah_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/delete_iv"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                tools:text="kmskmskmskmskm"
                android:gravity="start"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
        <TextView
                app:layout_constraintEnd_toStartOf="@id/delete_iv"
                android:id="@+id/al3amal_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ayah_tv"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:textSize="15sp"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                tools:text="ahahjhajhjahjahjahajhajhajahjahajhajhajahjahjahajhajhajahjahajhajhah"
                android:gravity="start"
                android:layout_height="wrap_content"/>

        <ImageView
                app:srcCompat="@drawable/ic_close"
                android:id="@+id/delete_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ayah_tv"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>