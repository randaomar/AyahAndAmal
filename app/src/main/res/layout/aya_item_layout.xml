<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ayahRowLayout"
              xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/hezb_img"
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="end"
            android:layout_width="25dp"
            android:src="@drawable/hezb"
            android:tint="@color/colorAccent"
            android:layout_height="25dp"/>
<android.support.v7.widget.CardView
        android:id="@+id/ayah_num_layout"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:layout_width="40dp"
        app:cardCornerRadius="10dp"
        android:layout_height="40dp">
    <jetpack.randa.com.ayahandamal.OthmaniTextView
            android:id="@+id/ayah_num"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            tools:text="101"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
</android.support.v7.widget.CardView>
    <jetpack.randa.com.ayahandamal.OthmaniTextView
            android:id="@+id/ayah_text"
            android:textIsSelectable="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <jetpack.randa.com.ayahandamal.OthmaniTextView
            android:id="@+id/surah_name"
            android:textIsSelectable="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="17sp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <TextView
            android:id="@+id/tafseer_text"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textIsSelectable="true"
            android:textSize="15sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

</LinearLayout>